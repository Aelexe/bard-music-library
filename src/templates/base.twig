{% set baseUrl = "https://bardmusiclibrary.com/" %}

{% set pageTitle = "Bard Music Library" %}
{% set pageDescription = "Bard music library." %}
{% set pageImage = "img/open-graph-banner.png" %}

<!DOCTYPE html>
<html lang="en">
	<head>
		<title>{{ pageTitle }}</title>
		<meta content="width=device-width, initial-scale=1" name="viewport"/>
		<meta charset="utf-8"/>
		{% if pageDescription is defined and pageDescription is not null %}
			<meta content="{{ pageDescription }}" name="description"/>
		{% endif %}

		<!-- Open Graph -->
		<meta content="website" property="og:type"/>
		<meta content="{{ pageTitle }}" property="og:title"/>
		{% if pageDescription is defined and pageDescription is not null %}
			<meta content="{{ pageDescription }}" property="og:description"/>
		{% endif %}
		{% if pageUrl is defined and pageUrl is not null %}
			<meta content="{{ baseUrl }}{{ pageUrl }}" property="og:url"/>
		{% endif %}
		{% if pageImage is defined and pageImage is not null %}
			<meta content="{{ baseUrl }}{{ pageImage }}" property="og:image"/>
		{% endif %}

		<!-- Styles -->
		<link rel="stylesheet" href="/fonts/fontawesome/all.css"/>
		<link rel="preconnect" href="https://fonts.googleapis.com">
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
		<link href="https://fonts.googleapis.com/css2?family=Roboto+Condensed:ital,wght@0,300;0,400;0,700;1,300;1,400;1,700&display=swap" rel="stylesheet">

		{% for css in aboveFoldStyles %}
			<link href="{{ css }}" rel="stylesheet">
		{% endfor %}

		<!-- Scripts -->
		<script src="https://code.jquery.com/jquery-3.5.1.min.js" integrity="sha256-9/aliU8dGd2tb6OSsuzixeV4y/faTqgFtohetphbbj0=" crossorigin="anonymous"></script>
		<script src="https://unpkg.com/react@17/umd/react.development.js" crossorigin="anonymous"></script>
		<script src="https://unpkg.com/react-dom@17/umd/react-dom.development.js" crossorigin="anonymous"></script>

		{% for script in aboveFoldScripts %}
			<script src="{{ script }}"></script>
		{% endfor %}
	</head>
	<body {% if bodyClass is defined and bodyClass is not null %} class="{{ bodyClass }}" {% endif %}> {% block body %}{% endblock %}
		<div class="container"></div>
	</body>
</html>
